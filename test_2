# string
a = 'привет' # одинаковые кавычки
b = "привет" # двойные кавычки
c = "я'знаю'Phython" # комбинированные кавычки
d = 'я"знаю"Phython' # можно и так
e = 'я"знаю'Phython" # а так нельзя (кавычки вперемешку)

#retrive

 a = 'привет'
 a[0] # 'п'
 a[1] # 'р'
 a[2] # 'и'
 a[3] # 'в'
 a[4] # 'е'
 a[5] # 'т'
 a[6] # Ошибка, вышли за границы
 a[-1] # 'т'
 a[-2] # 'е'
 a[-3] # 'в'
 a[-4] # 'и'
 a[-5] # 'р'
 a[-6] # 'п'
 a[-7] # Ошибка, вышли за границы


#update
a = 'привет'
a[0] = 'б' # хотеои получить "бривет", а получили ошибку, что строку нельзя изменять
TypeError:'str object does not support iten assignment
a = 'бривет' # для изменения придется полностью присвоить новое значение
